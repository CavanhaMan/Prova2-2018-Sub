<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ballblack"
        android:layout_width="80"
        android:layout_height="80"
        app:srcCompat="@drawable/ballblack"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="2dp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/nomeAluno"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Nome do aluno"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ballblack"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notaAluno"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="24dp"
        android:text="00"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nomeAluno"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ballblue"
        android:layout_width="80"
        android:layout_height="80"
        app:srcCompat="@drawable/ballblue"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="2dp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/ballred"
        android:layout_width="80"
        android:layout_height="80"
        app:srcCompat="@drawable/ballred"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="2dp"
        android:visibility="invisible" />


</android.support.constraint.ConstraintLayout>